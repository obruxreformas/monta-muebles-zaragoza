// Componente para las tarjetas de servicio
function ServiceCard({ icon, title, description }) {
  return (
    <div className="flex flex-col items-center p-8 bg-white rounded-custom-lg shadow-custom card-hover text-center animate-fadeInUp">
      <div className="w-20 h-20 bg-blue-600 rounded-full flex items-center justify-center text-white text-4xl mb-6 shadow-md">
        {icon}
      </div>
      <h3 className="text-2xl font-bold mb-3 text-gray-900">{title}</h3>
      <p className="text-gray-600">{description}</p>
    </div>
  );
}

// Componente para los √≠tems de la galer√≠a
function GalleryItem({ src, alt, description }) {
  return (
    <div className="bg-white rounded-custom-lg shadow-custom overflow-hidden card-hover animate-fadeInUp">
      <Image
        src={src}
        alt={alt}
        width={500}
        height={300}
        className="w-full h-48 object-cover transform hover:scale-105 transition-transform duration-500"
      />
      <div className="p-6">
        <p className="text-lg font-semibold text-gray-800">{description}</p>
      </div>
    </div>
  );
}

// Componente para la informaci√≥n de contacto
function ContactInfo({ icon, title, value, link, target = "_self" }) {
  return (
    <a href={link} target={target} rel={target === "_blank" ? "noopener noreferrer" : ""} className="flex flex-col items-center p-6 bg-white rounded-custom-lg shadow-custom card-hover text-center">
      <div className="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center text-white text-3xl mb-4 shadow-md">
        {icon}
      </div>
      <h3 className="text-xl font-bold mb-2 text-gray-900">{title}</h3>
      <p className="text-blue-600 text-lg font-medium">{value}</p>
    </a>
  );
}
